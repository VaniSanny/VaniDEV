<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bot Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c2f33;
            color: #ffffff;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
        }

        .card {
            background-color: #23272a;
            border: none;
        }

        .form-control,
        .form-select {
            background-color: #2c2f33;
            color: #fff;
            border-color: #7289da;
        }

        .form-control:focus,
        .form-select:focus {
            background-color: #2c2f33;
            color: #fff;
            box-shadow: none;
            border-color: #7289da;
        }

        .btn-primary {
            background-color: #7289da;
            border: none;
        }

        .btn-primary:hover {
            background-color: #677bc4;
        }

        .btn-outline-light:hover {
            color: #7289da;
            background-color: #fff;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="mb-3">
            <a href="/" class="btn btn-outline-light">&larr; Back to Home</a>
        </div>
        <div class="card p-4">
            <h2 class="text-center mb-4">Bot Activity Manager</h2>
            <% if (user) { %>
                <div class="text-center mb-3">
                    <img src="<%= user.displayAvatarURL() %>" alt="Avatar" class="rounded-circle" width="100">
                    <h4>
                        <%= user.username %>
                    </h4>
                </div>
                <% } else { %>
                    <div class="alert alert-warning">Bot is offline or starting up...</div>
                    <% } %>

                        <form action="/activity" method="POST">
                            <div class="mb-3">
                                <label for="activityType" class="form-label">Activity Type</label>
                                <select class="form-select" id="activityType" name="activityType">
                                    <% activities.forEach(act=> { %>
                                        <option value="<%= act.value %>">
                                            <%= act.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="activityName" class="form-label">Activity Text</label>
                                <input type="text" class="form-control" id="activityName" name="activityName"
                                    placeholder="e.g., watching movies" required>
                            </div>

                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="online">Online</option>
                                    <option value="idle">Idle</option>
                                    <option value="dnd">Do Not Disturb</option>
                                    <option value="invisible">Invisible</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Update Presence</button>
                        </form>
        </div>
    </div>
</body>

</html>